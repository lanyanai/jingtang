body,div,span,img,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,input,textarea,select,option,fieldset,legend,p,th,td{margin:0; padding:0;}
fieldset,img {border: 0;}
a{text-decoration:none; color:#252525;-webkit-tap-highlight-color: rgba(0,0,0,0);}
.clear{clear:both;}
ul,li{list-style:none;}
body{ font-family: "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
    color:#252525; font-size:14px; line-height:20px; -webkit-user-select:none;
    background-color: #f0f0f0;
}

/*顶部公共区域css*/
.logo-header{ overflow: hidden;
    background-image: -webkit-linear-gradient(top, #fafafa, #efefef);
    background-image: linear-gradient(to bottom, #fafafa, #efefef);
    background-image: -o-linear-gradient(top, #fafafa, #efefef);
    background-image: -moz-linear-gradient(top, #fafafa, #efefef);
    background-image: -ms-linear-gradient(top, #fafafa, #efefef);
    border-bottom: 1px solid #ededed;
    box-shadow: 0 2px 2px #c6c6c6;
    padding: 5px;
}
.logo{display: block; float:left;}
.logo img{ display: block;}

.search-box{border: 1px solid #adadad;
    background: #fafafa;
    border-radius: 6px;
    height: 30px;
    padding: 5px 8px;
    color: #828282;
    font-size: 16px;
    line-height: 30px;
    float:right;
    margin:1px 0;
}
#search-text{
    border: none;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    border-radius: 2px;
    width: 100px;
    color: #323232;
    background: #fafafa;
    font-size: 16px;
    height: 30px;
    line-height: normal;
    display: block;
    float: left;
    margin-right: 5px;
}
#search-btn{
    display: block;
    float:left;
    width: 30px;
    height: 100%;
}

.active{
    border-color:#ee8020;
}

textarea, input {
    resize: none;
    outline: none;
    -webkit-tap-highlight-color: rgba(255,0,0,0);
}

#nav{ overflow: hidden; background-color: #eeeeee;margin-top: 3px;}
.nav-list{ overflow: hidden;}
.nav-list li{float:left; width: 20%; text-align: center; font-size:16px; font-weight: bold; line-height: 30px; border-bottom: 4px solid #e1e1e1;}
.nav-list li.active{ border-bottom-color: #f68521;}

.title{ margin: 10px 15px 5px; font-size: 16px; color: #514e4e;}
.hot-search-list{ margin:0 10px 5px; overflow: hidden;}
.hot-search-list li{ width: 33.3%; float: left; margin: 5px 0;}
.hot-search-list li span{ display: block; margin: 0 5px; line-height: 40px; color: #fce9e1; font-size: 16px; text-align: center;}
.hot-search-list li:nth-child(3n+1) span{background-color: #ea753c;}
.hot-search-list li:nth-child(3n+2) span{background-color: #ea8e3c;}
.hot-search-list li:nth-child(3n) span{background-color: #eaa23c;}