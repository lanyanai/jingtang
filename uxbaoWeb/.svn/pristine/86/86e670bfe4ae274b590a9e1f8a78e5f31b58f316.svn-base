/* CSS Document */
body,div,span,img,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,input,textarea,select,option,fieldset,legend,p,th,td{margin:0; padding:0;}
fieldset,img {border: 0;}
a{text-decoration:none; color:#252525;}
.clear{clear:both;}
ul,li{list-style:none;}
body{ font-family: "Helvetica Neue", Helvetica, STHeiTi, sans-serif; color:#252525; font-size:14px; line-height:20px;}

.appList{margin:10px 10px;}
#app-list-box{width:100%; overflow: hidden;}
#app-list-box li{margin:5px auto; overflow: hidden; position: relative;}
.number
{
    background: url("../images/paihang/item_num.png") top right no-repeat;
    width:36px; text-align: center;
    margin: 10px 0;
    padding: 0 0 0 10px;
    line-height: 26px;
    position: absolute;
    color:#fff;
}
.itemAll{border:1px solid #e7e7e7;border-radius:15px;margin-left:46px;padding:3px 0;overflow: hidden; position: relative;}
.appInfo{margin-right: 32px;}
.appInfo a{display: block; overflow: hidden; width: 100%; position: relative;}
.appIcon{width:64px; height: 64px; display: block; position: absolute; border-radius: 9px; left:3px;}
.tit{margin-left: 75px; overflow: hidden;}
.tit strong{display:block;padding:0 3px;font-size: 18px;color: #858484;line-height: 28px; overflow:hidden; height: 28px;}
.tit p{display: block;padding: 0 3px; font-size: 12px; color: #c4c4c4; line-height: 20px; overflow: hidden; height: 20px;}
.tit .items-score{padding:2px 3px; overflow: hidden;}
.tit .items-score img{display: block; float:left;}
.btn{display: block;height: 32px;position: absolute;right: 3px; width: 32px; top: 3px;}
.dlBtn{background: url("../images/paihang/down.png") center no-repeat;}
.cancelBtn{background: url("../images/paihang/close.png") center no-repeat;}
.openBtn{background: url("../images/paihang/down.png") center no-repeat;}
.updateBtn{background: url("../images/paihang/down.png") center no-repeat;}
.installBtn{background: url("../images/paihang/down.png")center no-repeat;}
.btn .state{display: block; margin:32px 0 0;line-height: 32px; text-align: center;font-size: 14px; color: #89bb1c;}