.ui-slider-item img {
    display: block;
    margin:0 auto;
}

.ui-slider-item > a {
    display: block;
    text-decoration: none;
    /*由于slide-item有3d属性，导致android上最后一个overflow:hidden无效，所以给子集也加个overflow:hidden;*/
    width: 100%;
    overflow: hidden;
}

.ui-slider-dots {
    position: absolute;
    bottom: 6px;
    right: 0;
    padding: 0 6px;
    text-align: right;
}
.ui-slider-dots > b {
    display: inline-block;
    margin: 0 4px;
    width: 6px;
    height: 6px;
    border-radius: 3px;
    background: rgba(198, 198, 198, 0.8);
}

.ui-slider-dots .ui-state-active {
    background: #f68928;
}

