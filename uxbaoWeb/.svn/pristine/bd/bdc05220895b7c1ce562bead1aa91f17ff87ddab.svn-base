var ajaxFree = {
    "url": $.apiRoot + "appV3/getTopicById.do",
    "categoryId":39
};

//专题应用ajax参数对象
var ajaxFreeGame =
{
    "total_size":0,//总共的应用个数
    "start_position":1,//从第几个开始取
    "init_size":10,//第一次取的数目
    "load_size":5,//之后每次下拉加载的数目
